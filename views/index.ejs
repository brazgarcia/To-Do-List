<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>

    <link rel="stylesheet" href="style.css">
</head>

<body>
    <header>

        <% if (task == null) { %>

            <form action="/create" method="post">
                <input type="text" name="task" id="task" placeholder="Insira uma tarefa" required>
                <button id="addButton" type="submit">Adicionar</button>
            </form>

        <% } else { %>

            <form action="/updateOne/<%= task._id %>" method="post">
                <input type="text" name="task" id="task" value="<%= task.task %>" required>
                <button id="addButton" type="submit">Atualizar</button>
            </form>

        <% } %>

            

    </header>

    <section id="tasks">

        <ul>
            <% tasksList.forEach((task)=> { %>
                <li>
                    <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
                            <a href="/getById/<%= task._id %>">Editar</a>
                            <a href="">Apagar</a>
                </li>
                <% }) %>
        </ul>

    </section>






    <script src="script.js"></script>
</body>

</html>